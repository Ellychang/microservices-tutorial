@model IEnumerable<CouponDto>
<div class="row pb-3">
    <div class="col-6"></div>
    <div class="col-6 text-end">
        <a asp-action="CreateCoupon" class="btn btn-outline-primary">
            <i class="bi bi-plus-square"></i> Create New coupon
        </a>

    </div>
</div>
<table>
    <thead>
        <tr>
            <th>Coupon Code</th>
            <th>Discount Amount</th>
            <th>Minimum Amount</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
        <tr>
            <td>@item.CouponCode</td>
            <td>@((item.DiscountAmount).ToString("c"))</td>
                <td>@((item.MinAmount).ToString("c"))</td>
            <td>
                <a asp-action="DeleteCoupon" asp-route-couponId="@item.CoupionId" class="btn btn-danger">
                    <i class="bi bi-trash"></i>
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>