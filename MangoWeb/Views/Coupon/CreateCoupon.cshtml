@model CouponDto
<form asp-action="CreateCoupon">
    <br />
    <div class="row">
        <div class="col-2">
            <label class="control-label">Coupon Code</label>
        </div>
        <div class="col-10 pb-3">
            <input class="form-control" asp-for="CouponCode"></input>
            <span asp-validation-for="CouponCode" class="text-danger"></span>
        </div>
        <div class="col-2">
            <label class="control-label">Discount Amount</label>
        </div>
        <div class="col-10 pb-3">
            <input class="form-control" asp-for="DiscountAmount"></input>
            <span asp-validation-for="DiscountAmount" class="text-danger"></span>
        </div>
        <div class="col-2">
            <label class="control-label">Minimum Amount</label>
        </div>
        <div class="col-10 pb-3">
            <input class="form-control" asp-for="MinAmount"></input>
            <span asp-validation-for="MinAmount" class="text-danger"></span>
        </div>
     
    </div>
    <div class="row">
        <div class="col-5 offset-2">
            <a asp-action="CouponIndex" class="btn-primary btn form-control">Back to list</a>
        </div>
        <div class="col-5">
           <input type="submit" value="Create" class="btn btn-success form-control" />
        </div>
    </div>
</form>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
}
